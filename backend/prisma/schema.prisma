generator client {
  provider = "prisma-client-js"
  // output = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("METRICS_DATABASE_URL")
}

model Metrics {
  id String @id @default(uuid())
  name String
  value Float
  timestamp DateTime @default(now())
  delta Float?
  label String?
  route String?
  device String?
  connection String?
  userAgent String?
}